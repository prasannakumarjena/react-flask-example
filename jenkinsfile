pipeline {
    agent any
    environment{
        DOCKER_TAG = getDockerTag()
    }
    stages{
        stage('build Docker image'){
            steps{
                sh "docker build . -t pkjdocker/myapp:${DOCKER_TAG}"
            }
        }
        stage('dockerhub push'){
            steps{
                withCredentials([string(credentialsId: 'docker-hub', variable: 'dockerhubpwd')]) {
                sh "docker login -u pkjdocker -p ${dockerhubpwd}"
                sh "docker push pkjdocker/myapp:${DOCKER_TAG}"
              }
            }
        }
        stage{
            steps{
                sh "chmod + changeTag.sh"
                sh "./changeTag.sh ${DOCKER_TAG}"
                sshagent(['kops-server']) {
                sh "scp -o StrictHostKeyChecking=no services.yml node-app-pod.yml ubuntu@ec2-35-154-168-0:/root"
                 }
            }
        }
    }
}
def getDockerTag(){
    def tag = sh script: 'git rev-parse HEAD' , returnStdout: true
    return tag
}

